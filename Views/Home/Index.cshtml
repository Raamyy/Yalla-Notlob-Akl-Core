@using Yalla_Notlob_Akl.Business
@model OrderStatsVM

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/lib/Metronic/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/Metronic/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/Metronic/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
</head>

<div class="row">
    <!--begin:: Order Summary-->
    <div class="col-xl-3">
        <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Order Summary
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="m-widget4">
                    @foreach (var itemSummary in Model.OrderSummary)
                    {
                        <div class="m-widget4__item">
                            <span class="m-widget4__ext ">
                                <span class="m-widget4__number m--font-brand">
                                    @itemSummary.Value
                                </span>
                            </span>
                            @* <div class="m-widget4__img m-widget4__img--logo">
                                <img src="~/lib/Metronic/assets/app/media/img/client-logos/logo5.png" alt="">
                                </div> *@
                            <div class="m-widget4__info">
                                <span class="m-widget4__title">
                                    @itemSummary.Key.name
                                </span>
                                <br>
                            </div>
                            <span class="m-widget4__ext">
                                <span class="m-widget4__number m--font-brand">
                                    @if (itemSummary.Key.price.HasValue)
                                    {
                                        @: L.E. @(itemSummary.Key.price * itemSummary.Value)
                                    }else{
                                        @: -
                                    }
                                </span>
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--end:: Order Summary-->

    <!--begin:: Widgets/Sale Reports-->
    <div class="col-xl-9">
        <div class="m-portlet m-portlet--full-height ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Order Reciept
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--Begin::Tab Content-->
                <div class="tab-content">
                    <!--begin::tab 1 content-->
                    <div class="tab-pane active" id="m_widget11_tab1_content">
                        <!--begin::Widget 11-->
                        <div class="m-widget11">
                            <div class="table-responsive">
                                <!--begin::Table-->
                                <table class="table">
                                    <!--begin::Thead-->
                                    <thead>
                                        <tr>
                                            <td class="m-widget11__label">
                                                #
                                            </td>
                                            <td class="m-widget11__app">
                                                Person name
                                            </td>
                                            <td class="m-widget11__sales">
                                                Base
                                            </td>
                                            <td class="m-widget11__price">
                                                Tax 
                                            </td>
                                            <td class="m-widget11__price">
                                                Delivery
                                            </td>
                                            <td class="m-widget11__total m--align-right">
                                                Total
                                            </td>
                                        </tr>
                                    </thead>
                                    <!--end::Thead-->
                                    <!--begin::Tbody-->
                                    <tbody>
                                        @foreach (var Receipt in Model.OrderReciept)
                                        {
                                            <tr>
                                                <td>
                                                    <label
                                                        class="m-checkbox m-checkbox--solid m-checkbox--single m-checkbox--brand">
                                                        <input type="checkbox">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td>
                                                    <span class="m-widget11__title">
                                                        @Receipt.Key.name
                                                    </span>
                                                </td>
                                                <td>
                                                    @Receipt.Value.basePrice
                                                </td>
                                                <td>
                                                    @Receipt.Value.taxFees
                                                </td>
                                                <td>
                                                    @Receipt.Value.deleivryFees
                                                </td>
                                                <td class="m--align-right m--font-brand">
                                                    @Receipt.Value.totalPrice
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <!--end::Tbody-->
                                </table>
                                <!--end::Table-->
                            </div>
                        </div>
                        <!--end::Widget 11-->
                    </div>
                    <!--end::tab 1 content-->
                    <!--begin::tab 3 content-->
                    <div class="tab-pane" id="m_widget11_tab3_content"></div>
                    <!--end::tab 3 content-->
                </div>
                <!--End::Tab Content-->
            </div>
        </div>
    </div>
    <!--end:: Widgets/Sale Reports-->


</div>


<!--begin::Base Scripts -->
<script src="~/lib/Metronic/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
<script src="~/lib/Metronic/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
<!--end::Base Scripts -->
<!--begin::Page Snippets -->
<script src="~/lib/Metronic/assets/app/js/dashboard.js" type="text/javascript"></script>
<!--end::Page Snippets -->
